{% extends 'base.html.twig' %}

{% form_theme edit_form _self %}

{% block radio_widget %}
    <input type="radio" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked is defined %} checked="checked"{% endif %} />
{% endblock radio_widget %}

{% block body %}

    <h1>{{ 'radio.edit'|trans }}</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}

        <div class="buttonWrapper">
            <input class="button" type="submit" value="{{ 'edit'|trans }}" />
            <a class="button" href="{{ path('radio_index') }}">{{ 'back.tolist'|trans }}</a>
        </div>

    {{ form_end(edit_form) }}

{% endblock %}
