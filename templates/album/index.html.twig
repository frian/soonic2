{% extends 'base.html.twig' %}

{% block body %}
    <h1>Albums list</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Artist</th>
                <th>Songcount</th>
                <th>Duration</th>
                <th>Year</th>
                <th>Genre</th>
                <th>Coverartpath</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td>{{ album.name }}</td>
                <td>{{ album.artists[0] }}</td>
                <td>{{ album.songCount }}</td>
                <td>{{ album.duration }}</td>
                <td>{{ album.year }}</td>
                <td>{{ album.genre }}</td>
                <td>{{ album.coverArtPath }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('album_show', { 'id': album.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
